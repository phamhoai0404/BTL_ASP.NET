@model IEnumerable<Nhom8_ShopMotoBikes.Models.DanhMuc>




<header id="header" class="fixed-top">
        <div class="p1">
            <div class="container d-flex align-items-center">
                <a href="@Url.Action("Index","Home")" class="logo me-auto"><img src="~/wwwroot/img/logos/logo1.png" alt="" width="100%" height="100%"></a>

            </div>
        </div>
        <div class="p2">
            <ul id="menu">
                <div class="inner">
                    <div class="header-navbar-wrapper">
                        <div class="header-navbar text-right">
                            <ul class="no-bullets">
                                <li><a href="@Url.Action("Index", "Home")"><span>TRANG CHỦ</span></a></li>
                                <li>
                                    <a href="#"><span>SẢN PHẨM</span><i class="bi bi-chevron-down"></i></a>
                                    <ul style="margin-left: -117px;">
                                       
                    
                                        @foreach (var item in Model)
                                        {
                                         <li><a href="@Url.Action("Details","DanhMucs",new { id = item.MaDM})"><span>@item.TenDM</span></a></li>

                                        }

                                    </ul>
                                </li>
                                <li><a href=""><span>TIN TỨC</span></a></li>
                                <li><a href=""><span>GIỚI THIỆU</span></a></li>
                                <li><a href=""><span>LIÊN HỆ</span></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
        </div></div>
        <nav id="navbar" class="navbar order-last order-lg-0">


            <a class="nav-link scrollto search">
                <form>
                    <input type="text" id="keyword" name="txtKeyword" style="border-radius: 15px;" placeholder="Tìm kiếm ..." />
                    <i class="fas fa-search icons" style="font-size: 20px;margin-left: 0px;" onclick="onSearch()" ></i>
                </form>
            </a>

            


            <ul class="dropdown" style="margin-left: -20px;">
                <a href="#"><span><i class="fas fa-user icons"></i></span></a>
                <ul>
                    @if (Session["user"] == null)
                    {
                        <li>@Html.ActionLink("ĐĂNG NHẬP", "Login", "TaiKhoans")</li>
                        <li>@Html.ActionLink("ĐĂNG KÝ", "Register", "TaiKhoans")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("XEM THÔNG TIN CÁ NHÂN", "ThongTin", "TaiKhoans")</li>
                        <li>@Html.ActionLink("ĐĂNG XUẤT", "Logout", "TaiKhoans")</li>
                    }
                </ul>
            </ul>

            <a href="@Url.Action("Index","GioHang")"><i class="fas fa-cart-plus icons"></i> <span style="border-radius: 50%; height: 25px; width: 25px; background: #bbb; text-align: center; position: fixed; top: 18px; right: 106px; line-height:25px;">
   @ViewBag.SoLuongGioHang
</span></a>
            <!-- .navbar -->
            </nav>

 </header>
<script>
    const onSearch = () => {
      
        const keyword = document.getElementById("keyword").value;
        window.location = `/Hangs/Timkiem?keyword=${keyword}`;
    }
</script>