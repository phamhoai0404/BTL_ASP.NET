@model  Nhom8_ShopMotoBikes.Models.DonHang
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>DatHang</h2>

<!-- banner start -->
<section id="breadcrumb-wrapper" class="breadcrumb-w-img" style="background-image: url(/wwwroot/img/products/bg1.jpg); ">

    <div class="breadcrumb-overlay"></div>
    <div class="breadcrumb-content">
        <div class="wrapper">
            <div style="text-align: center;">
                <div class="breadcrumb-big">
                    <h2>
                        ĐƠN HÀNG
                    </h2>

                </div>
                <div class="breadcrumb-small">
                    <a href="@Url.Action("Index","Home")" title="">TRANG CHỦ</a>


                    <span aria-hidden="true">/</span>
                    <span>ĐƠN HÀNG / CHI TIẾT ĐƠN HÀNG  @Model.MaDH </span>


                </div>
            </div>
        </div>
    </div>
</section>
<!-- banner end -->
<!-- Payment successfully start here -->

<div class="payment-success">

    <div class="container">

        <div class="row">

            <div class="col-sm-12 col-md-10 col-lg-9 mx-auto">

                <div class="success-payment">

                    <h2 style="color: black;">Thông tin chi tiết đơn hàng # @Model.MaDH</h2>

                </div>

                <div class="tab products-details-tab">
                    <div class="row">
                        <div class="col-lg-12 col-md-12">
                            <div class="tab_content">
                                <div class="tabs_item">
                                    <div class="products-details-tab-content">
                                        <ul class="additional-information" style="width: 70%; margin: 0 auto;">
                                            <li>
                                                <span>Họ tên:</span>
                                                <span style="font-weight: 400;">  @Html.DisplayFor(model => model.TaiKhoan.HoTen) </span>

                                            </li>
                                            <li>
                                                <span>Địa chỉ:</span>
                                                <span style="font-weight: 400;"> @Html.DisplayFor(model => model.DiaChiGiaoHang)</span>
                                            </li>
                                            <li>
                                                <span>Điện thoại:</span>
                                                <span style="font-weight: 400;">   @Html.DisplayFor(model => model.TaiKhoan.SoDienThoai)</span>

                                            </li>
                                            <li>
                                                <span>Ngày đặt:</span>
                                                <span style="font-weight: 400;">@Html.DisplayFor(model => model.NgayDat)</span>
                                            </li>
                                            <li>
                                                <span>Thông tin sản phẩm</span><br />
                                            </li>
                                        </ul>
                                        <table class="table table-bordered" style="margin-left: 0px;margin-top: 10px; width: 100%;">
                                            <thead>
                                                <tr>
                                                    <th scope="col"> Hình ảnh</th>
                                                    <th scope="col" style="width: 250px;">Sản phẩm</th>
                                                    <th scope="col">Đơn giá</th>
                                                    <th scope="col">Số lượng</th>
                                                    <th scope="col">Thành tiền</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @for (int i = 0; i < ViewBag.SanPhamsClient.Count; i++)
                                                {
                                                    <tr>
                                                        <td class="product-thumbnail" style="height:70px; width:125px;">
                                                            @{
                                                                string ImagePath = "";
                                                                if (ViewBag.SanPhamsClient[i].Anh != null) { ImagePath = "~/wwwroot/img/sanpham/" + ViewBag.SanPhamsClient[i].Anh; }
                                                                else { ImagePath = "~/wwwroot/img/sanpham/no-image-news.png"; }
                                                            }

                                                            <img src="@Url.Content(ImagePath)" style="height:70px; width:125px;">

                                                        </td>
                                                        <td style="width: 125px; line-height: 70px; text-align: center; ">

                                                            <div style="font-weight: 500; font-size: 18px;">   @ViewBag.SanPhamsClient[i].TenHang </div>

                                                        </td>
                                                        <td class="product-subtotal" style="line-height: 70px; text-align: center; ">
                                                            <div style="font-weight: 500; font-size: 18px;">@string.Format("{0:#,##}", @ViewBag.SanPhamsClient[i].GiaTien) VND</div>
                                                        </td>
                                                        <td class="product-quantity" style="line-height: 70px;text-align: center; ">
                                                            <div style="font-weight: 500; font-size: 18px;"> @ViewBag.ChiTietDHClient[i].SoLuongDat </div>
                                                        </td>
                                                        <td class="product-subtotal" style="line-height: 70px;text-align: center; ">
                                                            <div style="font-weight: 500; font-size: 18px;">@string.Format("{0:#,##}", ViewBag.SanPhamsClient[i].GiaTien * ViewBag.ChiTietDHClient[i].SoLuongDat) VND </div>

                                                        </td>
                                                    </tr>
                                                }
                                                <tr>
                                                    <td colspan="4" style=" font-weight: 600; color: red; font-size: 20px; text-align: center; height: 70px; line-height: 70px;">Tổng tiền</td>

                                                    <td style=" font-weight: 600; color: black; font-size: 20px; text-align: center; height: 70px; line-height: 70px;"> @string.Format("{0:#,##}", Model.TongTien) VND </td>
                                                </tr>



                                            </tbody>
                                        </table>

                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-signin__link" style="font-weight: 700;">
                    <a href="@Url.Action("ThongTin","TaiKHoans")">
                        <p style="font-size: 22px;color:red">Trở về</p>
                    </a>
                </div>


            </div>

        </div>

    </div>

</div>

