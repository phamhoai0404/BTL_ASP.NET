@model Nhom8_ShopMotoBikes.Models.TaiKhoan
@{
    ViewBag.Title = "Xin chào, " + Model.HoTen;
    ViewBag.Link = "Thông tin đăng nhập";
    ViewBag.Name = "null";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="content">
    <div class="row mb-4 mt-3">
        <div class="col-lg-6 title3"> <b>Mã tài khoản: </b></div>
        <div class="col-lg-6 text-left title "> @Model.MaTK</div>
    </div>
    <div class="row mb-4">
        <div class="col-lg-6 title3"> <b>Họ và tên: </b></div>
        <div class="col-lg-6 text-left title "> @Model.HoTen</div>
    </div>
    <div class="row mb-4">
        <div class="col-lg-6 title3"> <b>Tên đăng nhập: </b></div>
        <div class="col-lg-6 text-left title "> @Model.TenDN </div>
    </div>
    <div class="row mb-4">
        <div class="col-lg-6 title3"> <b>Số điện thoại: </b></div>
        <div class="col-lg-6 text-left title "> @Model.SoDienThoai</div>
    </div>
    <div class="row mb-4">
        <div class="col-lg-6 title3"> <b>Quyền: </b></div>
        <div class="col-lg-6 text-left title "> Quản trị </div>
    </div>
    <div class="row mb-4">
        <div class="col-lg-6 title3"> <b>Trạng thái: </b></div>
        <div class="col-lg-6 text-left title "> Hoạt động </div>
    </div>
    <div class="row mb-4">
        <div class="col-lg-12 text-center">
            <button type="button" class="btn btn-danger">
                <a href="@Url.Action("Logout","Dangnhap")" style="color: white;">
                    <i class="bi bi-box-arrow-right" style="font-size: 20px;"></i>
                    Đăng xuất
                </a>
            </button>

        </div>
    </div>
</div>
