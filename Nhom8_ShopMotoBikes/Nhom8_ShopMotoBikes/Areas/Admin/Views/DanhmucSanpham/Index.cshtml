@model IEnumerable<Nhom8_ShopMotoBikes.Models.DanhMuc>
@{
    ViewBag.Title = "Danh mục sản phẩm";
   
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section CSSPartial{
    <link href="~/Areas/Admin/Assets/css/table.css" rel="stylesheet">
}
<div class="row">
    <div class="col-lg-12 mb-2 ">
        <button type="button" class="btn btn-success">
            <a href="@Url.Action("Create","DanhmucSanpham")" style="color:white;">
                <i class="bi bi-plus-square-dotted"></i>
                Thêm danh mục
            </a>
        </button>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered table-striped table-hover">
            <thead>
                <tr class="text-center">
                    <th>Mã danh mục</th>
                    <th>Tên danh mục</th>
                    <th colspan="3">Hành động</th>
                </tr>
            </thead>

            <tbody>

                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <th>@Html.DisplayFor(modelItem => item.MaDM)</th>
                        <td>@Html.DisplayFor(modelItem => item.TenDM)</td>
                        <td title="Xem chi tiết" class="see-details"> <a href="@Url.Action("Details","DanhmucSanpham",new {id = item.MaDM})"><i class="bi bi-eye-fill"></i></a></td>
                        <td title="Sửa danh mục" class="edit"> <a href="@Url.Action("Edit","DanhmucSanpham",new {id = item.MaDM})"><i class="bi bi-pencil-fill"></i></a></td>
                        <td title="Xóa danh mục" class="remove"> <a href="@Url.Action("Delete","DanhmucSanpham",new {id = item.MaDM})"><i class="bi bi-trash-fill"></i></a></td>
                    </tr>
                }
                </tbody>
            
            </table>
            
    </div>
</div>


