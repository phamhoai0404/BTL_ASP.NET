@model Nhom8_ShopMotoBikes.Models.DanhMuc

@{
    ViewBag.Title = "Sửa danh mục sản phẩm";

    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="chitiet">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaDM)
        <div class="form-group mt-3">
            <b>Mã danh mục :</b>
            @Html.DisplayFor(model => model.MaDM)
            <br />
        </div>

        <div class="form-group mt-3">
            <b>Tên danh mục:</b>
            <div class="col-md-12">
                @Html.EditorFor(model => model.TenDM, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenDM, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mt-3">
            <b> Mô tả:</b>
            <div class="col-md-12">
                @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control", @cols = 35, @rows = 5 } })
                @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mt-5 ">
            <div class="col-md-offset-2 col-md-12 text-center">
                <button type="submit" class="btn btn-warning">
                    Sửa
                </button> &nbsp; | &nbsp;

                @Html.ActionLink("Hủy", "Index")
            </div>
        </div>

        <div class="form-group mt-5">
            @if (ViewBag.ErrorEditDanhMuc != null)
            {
                <br />
                <div class="alert alert-danger" role="alert">@ViewBag.ErrorEditDanhMuc</div>
            }
        </div>
    </div>
    }
</div>


